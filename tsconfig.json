{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext", "ES6"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["**/__tests__/*", "node_modules"]
}
